[
    {
        "linter": {
            "name": "oelint-adv",
            "path": "/usr/bin/oelint-adv",
            "args": ["--rulefile=/opt/nittymcpick/oelint-rules.json"],
            "ret_regex": "^(?P<file>.*):(?P<line>\\d+):(?P<severity>(warning|error|info)):(?P<id>[a-z\\.]*):(?P<message>.*)$",
            "tweaks": {
                "line_count_adjust": 1,
                "single_file_exec": true
            }
        },
        "matches": {
            "pattern": ".+\\.bb|.+\\.bbappend|.+\\.inc"
        }
    }
]